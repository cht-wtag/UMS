<%= button_to 'Add Department', new_department_path, method: :get, class: "btn btn-primary" %>
<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">ID</th>
    <th scope="col">Name</th>
    <th scope="col">Details</th>

    <th scope="col">Action1</th>
    <th scope="col">Action2</th>
  </tr>
  </thead>
  <tbody>
  <% @departments.each do |dept|%>
  <tr>
    <th scope="row"><%=dept.id %></th>
    <td><%= dept.name  %></td>
    <td><%= button_to 'Faculties', department_faculties_path(dept), method: :get %>
      <%= button_to 'Students', department_students_path(dept), method: :get %>
      <%= button_to 'Courses', department_courses_path(dept), method: :get %></td>
    <td><%= link_to 'Update', edit_department_path(dept) %></td>
    <td><%= link_to 'Delete', department_path(dept), method: :delete, data: {confirm: "are you sure?"} %></td>
  </tr>

  </tbody>
    <%end %>
</table>