<h1> These are the current faculties of this department</h1>
<%= button_to 'Add Faculty', new_department_faculty_path(@dept), method: :get, class: "btn btn-primary" %>
<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">ID</th>
    <th scope="col">Name</th>
    <th scope="col">Position</th>
    <th scope="col">Action1</th>
    <th scope="col">Action2</th>
  </tr>
  </thead>
  <tbody>
  <% @faculties.each do |faculty|%>
    <tr>
      <th scope="row"><%=faculty.id %></th>
      <td><%= faculty.name  %></td>
      <td><%= faculty.position %></td>
      <td><%= link_to 'Update', edit_department_faculty_path(@department,faculty) %></td>
      <td><%= link_to 'Delete', department_faculty_path(@department, faculty), method: :delete, data: {confirm: "are you sure?"} %></td>
    </tr>
    </tbody>
  <%end %>
  </table>