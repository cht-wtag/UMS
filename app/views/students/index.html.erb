<h1> These are the current students of this department</h1>

<%= button_to 'Add Student', new_department_student_path(@dept), method: :get, class: "btn btn-primary" %>
<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">ID</th>
    <th scope="col">Name</th>
    <th scope="col">Roll</th>
    <th scope="col">Courses</th>
    <th scope="col">Action1</th>
    <th scope="col">Action2</th>
  </tr>
  </thead>
  <tbody>
  <% @students.each do |student|%>
    <tr>
      <th scope="row"><%=student.id %></th>
      <td><%= student.name  %></td>
      <td><%= student.roll %></td>
      <td> <%= button_to 'Course Registration', department_student_path(@department,student), method: "get" %></td>
      <td><%= link_to 'Update', edit_department_student_path(@department,student) %></td>
      <td><%= link_to 'Delete', department_student_path(@department, student), method: :delete, data: {confirm: "are you sure?"} %></td>
    </tr>
    </tbody>
  <%end %>
  </table>